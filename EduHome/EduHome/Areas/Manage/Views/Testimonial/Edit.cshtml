@model Testimonial
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <form method="post" enctype="multipart/form-data">
        <div class="form-row">
            <div class="form-group col-md-3">
                <label asp-for="@Model.Name">Name</label>
                <input asp-for="@Model.Name" class="form-control" id="Name" placeholder="Name">
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>

            <div class="form-group col-md-3">
                <label asp-for="@Model.Position">Position</label>
                <input asp-for="@Model.Position" class="form-control" id="Position" placeholder="Position">
                <span asp-validation-for="@Model.Position" class="text-danger"></span>
            </div>

            <div class="form-group col-md-3">
                <label asp-for="@Model.Order">Order</label>
                <input asp-for="@Model.Order" class="form-control" id="Order" placeholder="Order">
                <span asp-validation-for="@Model.Order" class="text-danger"></span>
            </div>

            <div class="form-group col-md-3">
                <label asp-for="@Model.Title">Title</label>
                <input asp-for="@Model.Title" class="form-control" id="Title" placeholder="Title">
                <span asp-validation-for="@Model.Title" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="@Model.ImageFile">Image</label>
            <input asp-for="@Model.ImageFile" />
            <span asp-validation-for="@Model.ImageFile" class="text-danger"></span>

            @if (Model.Image != null)
            {
                <div class="img-box" style="position:relative;max-width:200px">
                    <img class="d-block" src="~/img/event/@Model.Image" style="max-width:200px" />
                    <i class="fas fa-times remove-img-box" style="color:red;position:absolute;top:-7px;right:10px;cursor:pointer"></i>
                    <input type="hidden" name="Photo" value="@Model.Image" />
                </div>
            }
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $(document).on("click", ".remove-img-box", function (e) {
                $(this).parents(".img-box").empty();
            })
        })
    </script>
}