@model NoticeBoard
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <form method="post" enctype="multipart/form-data">
        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="@Model.Date">Date</label>
                <input asp-for="@Model.Date" class="form-control" id="Date" placeholder="Date">
                <span asp-validation-for="@Model.Date" class="text-danger"></span>
            </div>

            <div class="form-group col-md-4">
                <label asp-for="@Model.Desc">Desc</label>
                <input asp-for="@Model.Desc" class="form-control" id="Desc" placeholder="DaDescte">
                <span asp-validation-for="@Model.Desc" class="text-danger"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>