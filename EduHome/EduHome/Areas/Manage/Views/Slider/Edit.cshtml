@model Slider
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <form method="post" enctype="multipart/form-data">
        <div class="form-row">
            <div class="form-group col-md-3">
                <label asp-for="@Model.Order">Order</label>
                <input asp-for="@Model.Order" class="form-control" id="Order" placeholder="Order">
                <span asp-validation-for="@Model.Order" class="text-danger"></span>
            </div>

            <div class="form-group col-md-3">
                <label asp-for="@Model.Subtitle">Subtitle</label>
                <input asp-for="@Model.Subtitle" class="form-control" id="Subtitle" placeholder="Subtitle">
                <span asp-validation-for="@Model.Subtitle" class="text-danger"></span>
            </div>

            <div class="form-group col-md-3">
                <label asp-for="@Model.Title">Title</label>
                <input asp-for="@Model.Title" class="form-control" id="Title" placeholder="Title">
                <span asp-validation-for="@Model.Title" class="text-danger"></span>
            </div>

            <div class="form-group col-md-3">
                <label asp-for="@Model.TitleTwo">TitleTwo</label>
                <input asp-for="@Model.TitleTwo" class="form-control" id="TitleTwo" placeholder="TitleTwo">
                <span asp-validation-for="@Model.TitleTwo" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group">
                <label asp-for="@Model.ImageFile">Image</label>
                <input asp-for="@Model.ImageFile" />
                <span asp-validation-for="@Model.ImageFile" class="text-danger"></span>

                @if (Model.Image != null)
                {
                    <div class="img-box" style="position:relative;max-width:200px">
                        <img class="d-block" src="~/img/event/@Model.Image" style="max-width:200px" />
                        <i class="fas fa-times remove-img-box" style="color:red;position:absolute;top:-7px;right:10px;cursor:pointer"></i>
                        <input type="hidden" name="Photo" value="@Model.Image" />
                    </div>
                }
            </div>

            <div class="form-group">
                <label asp-for="@Model.BackImageFile">Background Image</label>
                <input asp-for="@Model.BackImageFile" />
                <span asp-validation-for="@Model.BackImageFile" class="text-danger"></span>

                @if (Model.Image != null)
                {
                    <div class="img-box" style="position:relative;max-width:200px">
                        <img class="d-block" src="~/img/event/@Model.BackImage" style="max-width:200px" />
                        <i class="fas fa-times remove-img-box" style="color:red;position:absolute;top:-7px;right:10px;cursor:pointer"></i>
                        <input type="hidden" name="Photo" value="@Model.BackImage" />
                    </div>
                }
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $(document).on("click", ".remove-img-box", function (e) {
                $(this).parents(".img-box").empty();
            })
        })
    </script>
}