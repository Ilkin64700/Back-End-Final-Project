@model Promotion
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";

}

<div class="container-fluid">
    <form method="post" enctype="multipart/form-data">

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="@Model.Title">Title</label>
                <input asp-for="@Model.Title" class="form-control" id="Title" placeholder="Title">
                <span asp-validation-for="@Model.Title" class="text-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="@Model.Desc">Desc</label>
                <input asp-for="@Model.Desc" class="form-control" id="Desc" placeholder="Desc">
                <span asp-validation-for="@Model.Desc" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="@Model.ImageFile">Image</label>
            <input asp-for="@Model.ImageFile" />
            <span asp-validation-for="@Model.ImageFile" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>