@model CourseTag
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <form method="post" enctype="multipart/form-data">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="@Model.TagId">Tag</label>
                <select class="form-control" asp-for="@Model.TagId" asp-items="ViewBag.Tags">
                </select>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="@Model.CourseId">Course</label>
                <select class="form-control" asp-for="@Model.CourseId" asp-items="ViewBag.Courses">
                </select>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>